<%= form_with(model: todolist, local: true) do |form| %>
  <% if todolist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todolist.errors.count, "error") %> prohibited this todolist from being saved:</h2>

      <ul>
        <% todolist.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.label :complete, class: "form-label" %>
    <%= form.check_box :complete, class: "form-check-input" %>
  </div>

  <div class="mt-3">
    <%= form.number_field :user_id, value: current_user.id, id: :todolist_user_id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-success mt-3"%>
  </div>
<% end %>
