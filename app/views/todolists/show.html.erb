<h1 class="mt-3 text-center">Your To Do list</h1>
<% if current_user %>
  <ul class="list-group">
    <li class="list-group-item">To Do: <%= @todolist.description %></li>
    <li class="list-group-item"><%= @todolist.comment %></li>
    <% if @todolist.complete == false %>
      <li class="list-group-item">Not completed</li>
    <% else %>
      <li class="list-group-item">Done</li>
    <% end %>
  </ul>
  <%= link_to 'Edit', edit_todolist_path(@todolist), class: "btn btn-primary mt-2" %> 
  <%= link_to 'Back', todolists_path, class: "btn btn-dark mt-2" %>
<% end %>
